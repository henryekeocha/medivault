# Database Configuration
DATABASE_URL="postgresql://user:password@production-db-host:5432/medical_image_sharing_prod?schema=public"

# JWT Configuration
JWT_SECRET="use-a-very-long-and-secure-random-string-in-production"
JWT_EXPIRES_IN="30d"

# AWS Configuration
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-prod-access-key-id"
AWS_SECRET_ACCESS_KEY="your-prod-secret-access-key"
AWS_S3_BUCKET="your-prod-bucket-name"

# Email Configuration
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_SECURE="true"
EMAIL_USER="your-prod-email@gmail.com"
EMAIL_PASSWORD="your-prod-app-specific-password"
EMAIL_FROM="Medical Image Sharing <no-reply@medical-image-sharing.com>"

# Server Configuration
PORT=8080
NODE_ENV="production"
DEBUG="false"
LOG_LEVEL="error"

# 2FA Configuration
TWO_FACTOR_APP_NAME="Medical Image Sharing"

# CORS Configuration
CORS_ORIGIN="https://medical-image-sharing.com"

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET="use-another-very-long-and-secure-random-string"
COOKIE_SECURE=true
COOKIE_SAME_SITE="strict" 